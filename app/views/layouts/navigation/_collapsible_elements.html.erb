<!-- Collect the nav links, forms, and other content for toggling -->
<div class="collapse navbar-collapse" id="navbar-collapsible-content">
  <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>

      <li class="nav-item dropdown pc-menu">
        <a id="user-settings" class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span id="user-name"><%= current_user.name %></span>
        </a>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to 'Edit Profile', edit_user_registration_path, class: 'dropdown-item'  %>
          <%= link_to 'Log out', destroy_user_session_path, class: 'dropdown-item', method: :delete %>
        </div>
      </li>

      <li class="mobile-menu">
        <%= link_to 'Edit Profile', edit_user_registration_path, class: 'nav-link' %>
      </li>
      <li class="mobile-menu">
        <%= link_to 'Log out', destroy_user_session_path, class: 'nav-link', method: :delete %>
      </li>

    <% else # user not signed it %>
      <li class="nav-item"><%= link_to 'Login', login_path, class: 'nav-link' %></li>
      <li class="nav-item"><%= link_to 'Signup', sign_up_path, class: 'nav-link' %></li>
    <% end # if user is signed it %>
  </ul>
</div><!-- navbar-collapse -->
